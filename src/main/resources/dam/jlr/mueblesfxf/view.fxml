<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dam.jlr.mueblesfxf.controller.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <children>
        <AnchorPane prefHeight="535.0" prefWidth="657.0">
            <TextField fx:id="txtID" disable="true" editable="false" layoutX="38.0" layoutY="60.0" promptText="Id" text="Id">
            <font>
               <Font name="System Italic" size="14.0" />
            </font></TextField>
            <TextField fx:id="txtTipo" layoutX="38.0" layoutY="101.0" promptText="Tipo">
            <font>
               <Font size="14.0" />
            </font></TextField>
            <TextField fx:id="textMaterial" layoutX="38.0" layoutY="143.0" promptText="Material">
            <font>
               <Font size="14.0" />
            </font></TextField>
            <TextField fx:id="textPrecio" layoutX="38.0" layoutY="182.0" promptText="Precio">
            <font>
               <Font size="14.0" />
            </font></TextField>
            <TableView fx:id="table" layoutX="5.0" layoutY="264.0" prefHeight="348.0" prefWidth="693.0">
                <columns>
                    <TableColumn fx:id="idcolumn" maxWidth="515.0" minWidth="30.0" prefWidth="51.5" text="ID" />
                    <TableColumn fx:id="tipoColumn" maxWidth="2085.0" minWidth="30.0" prefWidth="208.5" text="Tipo" />
                    <TableColumn fx:id="materialColumn" maxWidth="2670.0" minWidth="30.0" prefWidth="267.0" text="Material" />
                    <TableColumn fx:id="precioColumn" maxWidth="1650.0" minWidth="30.0" prefWidth="165.0" text="Precio" />
                </columns>
            </TableView>
            <Button layoutX="550.0" layoutY="60.0" mnemonicParsing="false" onAction="#create" prefHeight="25.0" prefWidth="67.0" text="Crear" />
            <Button layoutX="550.0" layoutY="115.0" mnemonicParsing="false" onAction="#modify" prefHeight="25.0" prefWidth="67.0" text="Modificar" />
            <Button layoutX="550.0" layoutY="165.0" mnemonicParsing="false" onAction="#delete" prefHeight="25.0" prefWidth="67.0" text="Borrar" />
            <TextField fx:id="txtBuscar" layoutX="257.0" layoutY="60.0" prefHeight="25.0" prefWidth="149.0" />
            <Text fill="#00eaff" layoutX="257.0" layoutY="39.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Buscar">
                <font>
                    <Font name="Arial Bold" size="24.0" />
                </font>
            </Text>
            <RadioButton fx:id="radiobuttonID" layoutX="257.0" layoutY="90.0" mnemonicParsing="false" selected="true" text="ID">
            <toggleGroup>
               <ToggleGroup fx:id="m" />
            </toggleGroup></RadioButton>
            <RadioButton fx:id="radiobuttonTipo" layoutX="257.0" layoutY="115.0" mnemonicParsing="false" text="Tipo" toggleGroup="$m" />
            <RadioButton fx:id="radiobuttonMaterial" layoutX="257.0" layoutY="140.0" mnemonicParsing="false" text="Material" toggleGroup="$m" />
            <RadioButton fx:id="radiobuttonPrecio" layoutX="257.0" layoutY="165.0" mnemonicParsing="false" text="Precio" toggleGroup="$m" />
         <RadioButton fx:id="radioButtonAny" layoutX="257.0" layoutY="190.0" mnemonicParsing="false" text="Cualquiera" toggleGroup="$m" />
         <ToggleButton fx:id="toggle" layoutX="220.0" layoutY="62.0" mnemonicParsing="false" onAction="#clear" prefHeight="25.0" prefWidth="22.0" />
        </AnchorPane>
    </children>

</VBox>
